
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Mengizinkan akses baca dan tulis secara penuh ke koleksi 'players' 
    // untuk semua orang, baik yang sudah login maupun belum.
    // Ini akan menyelesaikan semua masalah izin untuk papan skor.
    match /players/{document=**} {
      allow read, write: if true;
    }
  }
}
