rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for the 'players' collection
    match /players/{playerId} {
      // Any authenticated user can read the list of players or a single player
      allow read: if isSignedIn();

      // Any authenticated user can create, update, or delete a player
      allow write: if isSignedIn();
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // A user can create their own profile
      allow create: if request.auth.uid == userId;

      // A user can only read their own profile
      allow read, update: if request.auth.uid == userId;
      
      // Users cannot delete their profiles through the app
      allow delete: if false;
    }
  }
}

    