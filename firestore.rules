
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Default to denying all access.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to perform actions within a session.
    match /sessions/{sessionId} {
      // Allow read, create, and update on the session document if signed in.
      allow read, create, update: if isSignedIn();

      // Allow full read/write access to players, rounds, and scores subcollections
      // for any authenticated user.
      match /{subcollection=**} {
        allow read, write: if isSignedIn();
      }
    }
  }
}
