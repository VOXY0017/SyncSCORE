
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Izinkan akses baca dan tulis secara penuh ke collection 'players' untuk semua orang.
    // Ini akan menyelesaikan semua masalah izin untuk papan skor.
    match /players/{document=**} {
      allow read, write: if true;
    }
  }
}
