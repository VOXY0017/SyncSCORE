
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read the players collection and individual player documents.
    // 'read' permission includes 'get' and 'list' operations.
    match /players/{playerId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
