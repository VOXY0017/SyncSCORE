
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // This rule allows any authenticated user to list the documents in the 'players' collection.
    // The 'list' permission is required for queries that read multiple documents.
    match /players {
      allow list: if request.auth != null;
    }

    // This rule allows any authenticated user to get, create, update, or delete
    // a specific player document. The 'read' here covers 'get' and 'write' covers
    // 'create', 'update', and 'delete'.
    match /players/{playerId} {
      allow read, write: if request.auth != null;
    }
  }
}
