rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /players/{playerId} {
      // Allow any user to read an individual player's data.
      allow get: if true;
      
      // Allow authenticated users to read the entire list of players.
      allow list: if request.auth != null;
      
      // Allow authenticated users to create, update, or delete player data.
      allow write: if request.auth != null;
    }
  }
}
