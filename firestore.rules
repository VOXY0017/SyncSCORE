rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /players/{playerId} {
      // Authenticated users can perform all read and write operations
      allow read, write: if request.auth != null;
    }

    match /users/{userId} {
      // Only the authenticated user can create their own profile document.
      allow create: if request.auth != null && request.auth.uid == userId;

      // Only the authenticated user can read or update their own document.
      allow read, update: if request.auth != null && request.auth.uid == userId;

      // Nobody can delete a user profile through the client.
      allow delete: if false;
    }
  }
}
