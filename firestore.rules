rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Terapkan aturan untuk operasi 'list' pada koleksi 'players'
    match /players/{document=**} {
      allow list: if request.auth != null;
    }

    // Terapkan aturan untuk dokumen individual di dalam 'players'
    match /players/{playerId} {
      // Izinkan siapa saja untuk membaca (get) data pemain individual.
      allow get: if true;

      // Izinkan hanya pengguna yang sudah login untuk membuat, mengubah, atau menghapus data.
      allow write: if request.auth != null;
    }
  }
}
