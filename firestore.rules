rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /players/{playerId} {
      // Izinkan siapa saja untuk membaca (get, list) data pemain.
      // Ini diperlukan agar papan skor dapat ditampilkan.
      allow read: if true;

      // Izinkan hanya pengguna yang sudah login untuk membuat, mengubah, atau menghapus data.
      allow write: if request.auth != null;
    }
  }
}
