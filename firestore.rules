rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /players/{playerId} {
      // Izinkan siapa saja untuk membaca (get) data pemain individual.
      allow get: if true;

      // Izinkan hanya pengguna yang sudah login untuk membuat, mengubah, atau menghapus data.
      allow write: if request.auth != null;
    }

    match /players/{playerId} {
      // Izinkan pengguna yang sudah login untuk membaca seluruh daftar pemain (list).
      allow list: if request.auth != null;
    }
  }
}
