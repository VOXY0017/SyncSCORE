
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Izinkan siapa saja untuk membaca (get, list) dari koleksi players.
    // Ini diperlukan agar papan skor dapat ditampilkan.
    match /players/{playerId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
